# Environment Variables for DIY Smart Assistant

# API Keys
OPENAI_API_KEY=your-openai-api-key-here

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./diy_assistant.db

# For production (PostgreSQL with RDS)
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/diyassistant
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_NAME=diyassistant

# Redis Configuration (Optional)
# For local development
# REDIS_URL=redis://localhost:6379
# For production (ElastiCache)
# REDIS_URL=redis://your-elasticache-endpoint.amazonaws.com:6379

# CORS Settings
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:80

# Frontend Configuration
VITE_API_URL=http://localhost:8001
VITE_APP_VERSION=1.0.0

# AWS Configuration (Required for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_ACCOUNT_ID=your-aws-account-id

# S3 Configuration
S3_BUCKET=diy-assistant-uploads
S3_BUCKET_NAME=diy-assistant-frontend

# AWS Cognito (Future Use)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Production URLs
PRODUCTION_API_URL=https://api.yourdomain.com
DOMAIN_NAME=yourdomain.com

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_ID=EXXXXXXXXXX

# Docker Registry (ECR)
DOCKER_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Feature Flags
ENABLE_AUTHENTICATION=false
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE_MB=10

# Development Settings
DEBUG=false
HOT_RELOAD=true