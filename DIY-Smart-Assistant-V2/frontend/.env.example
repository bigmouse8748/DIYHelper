# DIY Smart Assistant V2 Frontend - Environment Configuration Template
# Copy this file to .env.local for local development
# Copy this file to .env.production for production build

# ==========================================
# API CONFIGURATION
# ==========================================
# Local Development
VITE_API_URL=http://localhost:8000

# Production - uncomment for AWS deployment
# VITE_API_URL=https://api.cheasydiy.com

# ==========================================
# APPLICATION SETTINGS
# ==========================================
VITE_APP_NAME=DIY Smart Assistant
VITE_APP_VERSION=2.0.0

# ==========================================
# FEATURE FLAGS
# ==========================================
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# ==========================================
# THIRD-PARTY SERVICES (Optional)
# ==========================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry Error Tracking
VITE_SENTRY_DSN=