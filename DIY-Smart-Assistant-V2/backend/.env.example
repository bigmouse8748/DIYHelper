# Application
APP_NAME="DIY Smart Assistant"
APP_VERSION="2.0.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-in-production"

# Database
DATABASE_URL="sqlite:///./diy_assistant.db"
# For PostgreSQL: postgresql://user:password@localhost:5432/diy_assistant

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4-vision-preview"

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="jpg,jpeg,png,webp"

# CORS (comma separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Email Service Configuration (Required for email verification)
# Gmail Example:
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com" 
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@diyassistant.com"

# Alternative SMTP Services:
# SendGrid: smtp.sendgrid.net
# Mailgun: smtp.mailgun.org  
# AWS SES: email-smtp.us-east-1.amazonaws.com

# Redis (Optional)
REDIS_URL="redis://localhost:6379"

# Sentry (Optional)
SENTRY_DSN=""